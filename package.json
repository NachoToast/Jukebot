{
    "name": "jukebot",
    "version": "1.0.2",
    "main": "./dist/index.js",
    "license": "CC-BY-SA-4.0",
    "private": true,
    "scripts": {
        "dev": "nodemon ./src/index.ts --devmode",
        "start": "node .",
        "lint": "eslint --ext .ts src --max-warnings=0",
        "build": "tsc",
        "test": "jest",
        "typecheck": "tsc --noEmit",
        "check-all": "yarn test && yarn lint && yarn typecheck",
        "auth": "node ./scripts/login.js"
    },
    "devDependencies": {
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.12",
        "@typescript-eslint/eslint-plugin": "^5.10.1",
        "@typescript-eslint/parser": "^5.10.1",
        "eslint": "^8.7.0",
        "eslint-config-prettier": "^8.3.0",
        "jest": "^27.4.7",
        "nodemon": "^2.0.15",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "@discordjs/builders": "^0.12.0",
        "@discordjs/opus": "^0.7.0",
        "@discordjs/rest": "^0.3.0",
        "@discordjs/voice": "^0.8.0",
        "canvas": "^2.9.0",
        "discord-api-types": "^0.27.3",
        "discord.js": "^13.6.0",
        "ffmpeg-static": "^4.4.1",
        "moment": "^2.29.1",
        "play-dl": "^1.8.2",
        "sodium": "^3.0.2",
        "tiny-typed-emitter": "^2.1.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node"
    },
    "nodemonConfig": {
        "watch": [
            "src",
            "auth.json",
            "config.json"
        ],
        "ext": "ts",
        "ignore": [
            "**/*.test.ts"
        ]
    }
}
