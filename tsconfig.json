{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "sourceMap": true,
        "outDir": "build",
        "strict": true,
        "alwaysStrict": true,
        "types": ["node", "jest"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src/**/*"]
}
